# Database
DB_HOST=localhost
DB_PORT={{.DBPort}}
DB_USER={{.DBUser}}
DB_PASSWORD={{.DBPassword}}
DB_NAME={{.DBName}}

# Server
PORT={{.APIPort}}
ENV=development

{{if .IncludeS3}}# AWS S3 Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
S3_BUCKET_NAME={{.ProjectName}}-images
S3_URL_EXPIRATION=24h
{{end}}

{{if .IncludeAuth}}# JWT Authentication
JWT_SECRET=your-secret-key-here
JWT_EXPIRATION=24h
{{end}}

# Redis
REDIS_HOST=localhost
REDIS_PORT={{.RedisPort}}

# Optional
LOG_LEVEL=info